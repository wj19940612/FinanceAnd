                android:bottomLeftRadius="@dimen/common_radius"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="@dimen/common_radius"
                android:topRightRadius="0dp"/>
            <solid android:color="@color/greyAssist"/>
        </shape>
    </item>

</selector>