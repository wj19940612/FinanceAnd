<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.sbai.finance.activity.mine.AboutUsActivity">

    <com.sbai.finance.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:backFeature="true"
        app:backIcon="@drawable/ic_tb_back_black"
        app:titleText="@string/about_le_mi"
        app:titleTextColor="@color/primaryText"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@mipmap/ic_launcher"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/versionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="34dp"
        android:textColor="@color/primaryText"
        android:textSize="15sp"
        tools:text="乐米金融1.1"/>

    <com.sbai.finance.view.IconTextRow
        android:id="@+id/action_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_split_height"
        android:background="@drawable/bg_white"
        app:hasBottomSplitLine="true"
        app:rightIcon="@drawable/ic_arrow_right_tint"
        app:rowText="@string/action_product"
        app:rowTextColor="@color/primaryText"
        app:splitLineColor="@color/split"
        app:subTextColor="@color/unluckyText"
        app:subTextSize="@dimen/common_default_size"/>

    <com.sbai.finance.view.IconTextRow
        android:id="@+id/user_protocol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        app:hasBottomSplitLine="true"
        app:rightIcon="@drawable/ic_arrow_right_tint"
        app:rowText="@string/user_protocol"
        app:rowTextColor="@color/primaryText"
        app:splitLineColor="@color/split"
        app:subTextColor="@color/unluckyText"
        app:subTextSize="@dimen/common_default_size"/>

    <com.sbai.finance.view.IconTextRow
        android:id="@+id/checkUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        app:rightIcon="@drawable/ic_arrow_right_tint"
        app:rowText="@string/check_update"
        app:rowTextColor="@color/primaryText"
        app:subTextColor="@color/unluckyText"
        app:subTextSize="@dimen/common_default_size"/>

    <LinearLayout
        android:id="@+id/serviceConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/common_padding"
        android:visibility="visible">

        <TextView
            android:id="@+id/copyConnectWay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="12dp"
            android:text="@string/service"
            android:textColor="@color/unluckyText"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">

            <LinearLayout
                android:background="@drawable/bg_white_stroke"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/weChat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_service_wechat"
                    android:drawablePadding="8.5dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:maxLines="1"/>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/bg_white_stroke"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/qq"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_service_qq"
                    android:drawablePadding="8.5dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:maxLines="1"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="11dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/unluckyText"
        android:textSize="12sp"/>

</LinearLayout>
