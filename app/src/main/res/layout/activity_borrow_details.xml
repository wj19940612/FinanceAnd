<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.sbai.finance.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:backIcon="@drawable/ic_tb_back_black"
        app:barBackground="@android:color/white"
        app:titleText="@string/details"
        app:titleTextColor="@color/blackAssist"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/split"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_marginBottom="2dp"
            android:layout_above="@+id/bottom"
            android:layout_centerInParent="true"
            android:divider="@null"
            android:scrollbars="none"
            android:visibility="visible"/>
        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/borrowStatus"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/borrowOutSuccess"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/call"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_pressable"
                        android:gravity="center"
                        android:text="@string/call"
                        android:textColor="@color/redPrimary"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/alreadyRepay"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_pressable_red"
                        android:gravity="center"
                        android:text="@string/already_repay"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/callOnly"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_pressable_red"
                    android:gravity="center"
                    android:text="@string/call"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_pressable"
                    android:gravity="center"
                    android:textColor="@color/redAssist"
                    android:textSize="15sp"
                    tools:text="@string/cancel_borrow_in"/>
                <TextView
                    android:id="@+id/giveHelp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_red_primary_no_radius"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:visibility="visible"
                    tools:text="@string/give_help"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/leaveMessageArea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/tab_background"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/leaveMessage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="@string/leave_message"
                    android:maxLength="300"
                    android:padding="14dp"
                    android:textColorHint="@color/unluckyText"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#d8d8d8"/>

                <TextView
                    android:id="@+id/send"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/send"
                    android:textColor="@color/primaryText"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>