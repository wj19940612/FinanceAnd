<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.sbai.finance.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/borrow_out_mine_his_detail"
        app:backFeature="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greyLightAssist">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/userInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/userPortrait"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerInParent="true"
                        android:clickable="true"
                        android:src="@drawable/ic_default_avatar"/>
                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="11dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/ic_goodheart"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="8sp"
                        android:text="@string/load_person"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/userNameLand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:lineSpacingExtra="8dp"
                    android:orientation="vertical"
                    android:textColor="@color/redPrimary"
                    android:textSize="15sp"
                    tools:text="@string/user_address"/>
                <TextView
                    android:id="@+id/publishTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:lineSpacingExtra="5dp"
                    tools:text="@string/borrow_in_time"
                    android:textColor="@color/assistText"
                    android:textSize="11sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_borrow_money"
                    android:gravity="center"
                    android:text="@string/borrow_money"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:background="@drawable/bg_product_up_down"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/need_amount"
                            android:textColor="@color/secondaryText"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/needAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/blackAssist"
                            tools:text="@string/RMB"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/borrow_time"
                            android:textColor="@color/secondaryText"
                            android:textSize="10sp"/>


                        <TextView
                            android:id="@+id/borrowTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/blackAssist"
                            tools:text="@string/day"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/borrow_interest"
                            android:textColor="@color/secondaryText"
                            android:textSize="10sp"/>


                        <TextView
                            android:id="@+id/borrowInterest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/redPrimary"
                            tools:text="@string/RMB"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/opinion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="12dp"
                android:textColor="@color/opinionText"
                android:textSize="14sp"
                tools:text="狗狗生病住院"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="0dp"
                    android:layout_height="69dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    tools:src="@drawable/help"/>

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="0dp"
                    android:layout_height="69dp"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    tools:src="@drawable/help"/>

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="0dp"
                    android:layout_height="69dp"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    tools:src="@drawable/help"/>

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="0dp"
                    android:layout_height="69dp"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    tools:src="@drawable/help"/>

            </LinearLayout>
            <include layout="@layout/split_line_grey_light"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_padding"
                android:background="@color/greyLightAssist"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/helperAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_people_help"
                    android:drawablePadding="5dp"
                    android:textColor="@color/greyAssist"
                    android:textSize="14sp"
                    android:text="@string/helper_her"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">
                    <com.sbai.finance.view.MyGridView
                        android:id="@+id/gridView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:numColumns="auto_fit"
                        android:columnWidth="32dp"
                        android:horizontalSpacing="5dp"/>
                    <ImageView
                        android:id="@+id/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_help_detail"
                        android:clickable="true"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>