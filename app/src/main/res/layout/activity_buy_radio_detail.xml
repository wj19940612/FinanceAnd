<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.sbai.finance.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        app:backFeature="true"
        app:backIcon="@drawable/ic_tb_back_black"
        app:hasBottomSplitLine="true"
        app:titleText="@string/pay_detail"/>

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_below="@+id/titleBar"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/ic_buy_radio_detail"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="buy content"
                android:textColor="@color/unluckyText"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="buy content"
                android:textColor="@color/primaryText"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="9.9"
                android:textColor="@color/payNum"
                android:textSize="24sp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/paySelectLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contentLayout"
        android:layout_marginTop="14dp"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/aliRecharge"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_white"
            android:clickable="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/payName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:clickable="false"
                android:drawableLeft="@drawable/ic_ali_pay"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/ali_pay"
                android:textColor="@color/primaryText"
                android:textSize="15sp"/>

            <CheckBox
                android:id="@+id/checkboxClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/checkout_select"
                android:button="@null"
                android:clickable="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/split"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/miliRecharge"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_white"
            android:clickable="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/miliPayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:clickable="false"
                android:drawableLeft="@drawable/ic_mili_pay"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textColor="@color/primaryText"
                android:textSize="15sp"/>

            <CheckBox
                android:id="@+id/miliCheckboxClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/checkout_select"
                android:button="@null"
                android:clickable="false"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/noMiliTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:textSize="15sp"
                android:textColor="@color/unluckyText"
                android:text="@string/no_mili"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/deduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/miliCheckboxClick"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:textSize="12sp"
                android:textColor="@color/payNum"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/balanceNotEnough"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="59dp"
                android:text="@string/balance_not_enough"
                android:textColor="@color/unluckyText"
                android:textSize="15sp"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paySelectLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/common_margin"
        android:textSize="12sp"
        android:textColor="@color/unluckyText"
        android:text="@string/pay_mili_tip"/>

    <TextView
        android:id="@+id/payBtn"
        android:layout_width="347dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/paySelectLayout"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_buy_radio_pay"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="@string/sure_to_pay"/>

    <TextView
        android:id="@+id/payTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/payBtn"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/unluckyText"
        android:text="@string/question_to_ask_custom"/>

</RelativeLayout>