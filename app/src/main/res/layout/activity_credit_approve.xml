<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyLightAssist"
    android:orientation="vertical"
    tools:context="com.sbai.finance.activity.mine.CreditApproveActivity">

    <com.sbai.finance.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:titleText="@string/real_name_approve"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_line_division_center"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/realNameInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/real_name"
            android:maxLines="1"
            android:textColor="@color/primaryText"
            android:textColorHint="@color/hintText"
            android:textSize="15sp"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/nameClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_login_label_delete"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_line_division_center"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/identityCardNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/identity_card_number"
            android:maxLines="1"
            android:textColor="@color/primaryText"
            android:textColorHint="@color/hintText"
            android:textSize="15sp"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/identityCardNumberClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_login_label_delete"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/addIdentityCardFront"
            android:layout_width="117dp"
            android:layout_height="100dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_dotted_line_gray"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_release_help_addpic"
            android:gravity="center_horizontal"
            android:paddingTop="22dp"
            android:text="@string/identity_card_font"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/addIdentityCardReverse"
            android:layout_width="117dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_dotted_line_gray"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_release_help_addpic"
            android:gravity="center_horizontal"
            android:paddingTop="22dp"
            android:text="@string/identity_card_reverse"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/identityCardFrontImage"
            android:layout_width="117dp"
            android:layout_height="100dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_dotted_line_gray"
            android:gravity="center"
            android:visibility="gone"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/identityCardReverseImage"
            android:layout_width="117dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_dotted_line_gray"
            android:gravity="center"
            android:visibility="gone"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/errorHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/ic_errow_hint"
        android:drawablePadding="5dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding"
        android:textColor="@color/warningText"
        android:visibility="invisible"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:background="@drawable/btn_login_rounded"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/submit_has_empty"
        android:textColor="@android:color/white"/>
</LinearLayout>
