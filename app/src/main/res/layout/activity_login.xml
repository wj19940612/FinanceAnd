<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical"
    tools:context="com.sbai.finance.activity.mine.LoginActivity">

    <RelativeLayout
        android:id="@+id/showLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<android.support.v7.widget.AppCompatImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:scaleType="fitXY"-->
            <!--app:srcCompat="@drawable/bg_login"/>-->

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/deletePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/ic_login_head_close"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/appIconName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deletePage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/logo_login"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:id="@+id/contentLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appIconName"
            android:orientation="vertical">

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/phoneLl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/appIconName"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="45dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="@string/phone_number"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"/>

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/phoneNumber"
                    style="@style/SignEditText.PhoneNum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_weight="1"
                    android:hint="@string/please_input_phone_number"/>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/phoneNumberClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_login_label_delete"/>
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:background="@color/greyLightAssist"/>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:minHeight="60dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="@string/auth_code"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"/>

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/authCode"
                    style="@style/SignEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_weight="1"
                    android:hint="@string/please_input_auth_code"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingTop="10dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/getAuthCode"
                    android:layout_width="93dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_auth_code_rounded"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="@string/get_auth_code"
                    android:textColor="@color/login_get_auth_code_color"/>

            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:background="@color/greyLightAssist"/>
        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/errorHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contentLL"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_errow_hint"
            android:drawablePadding="5dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding"
            android:textColor="@color/warningText"
            android:visibility="invisible"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/errorHint"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:background="@drawable/btn_login_rounded"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/hideLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>
</LinearLayout>
