<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redPrimary">

    <com.sbai.finance.view.training.TrainHeaderView
        android:id="@+id/trainHeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_below="@+id/trainHeaderView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp">
    </android.support.v4.view.ViewPager>

    <ImageView
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainHeaderView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="330dp"
        android:src="@drawable/ic_train_previous"/>

    <ImageView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/trainHeaderView"
        android:layout_marginRight="20dp"
        android:layout_marginTop="330dp"
        android:src="@drawable/ic_train_next"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="6/6"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <com.sbai.finance.view.training.DragImageView
        android:id="@+id/star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainHeaderView"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_star_1"
        android:visibility="visible"/>

    <com.sbai.finance.view.training.DragImageView
        android:id="@+id/star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainHeaderView"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_star_2"
        android:visibility="visible"
        app:delayTime="500"/>

    <com.sbai.finance.view.training.DragImageView
        android:id="@+id/star3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainHeaderView"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_star_3"
        android:visibility="visible"
        app:delayTime="1000"/>

    <com.sbai.finance.view.training.DragImageView
        android:id="@+id/star4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainHeaderView"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/ic_star_4"
        android:visibility="visible"
        app:delayTime="1500"/>

    <com.sbai.finance.view.training.DragImageView
        android:id="@+id/star5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainHeaderView"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/ic_star_5"
        android:visibility="visible"
        app:delayTime="2000"/>

</RelativeLayout>
