<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">

    <com.sbai.finance.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:barBackground="@color/blackAssist"
        app:rightImage="@drawable/ic_share"
        app:rightText="@string/share"
        app:rightTextSize="14sp"
        app:rightVisible="true"
        app:titleText="@string/details"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_default_avatar"/>

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/avatar"
                        android:textColor="@color/redPrimary"
                        android:textSize="15sp"
                        tools:text="刘亦菲"/>

                    <TextView
                        android:id="@+id/isAttention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/userName"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/userName"
                        android:textColor="@color/assistText"
                        android:textSize="11sp"
                        tools:text="@string/is_attention"/>

                    <TextView
                        android:id="@+id/publishTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/userName"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/assistText"
                        android:textSize="11sp"
                        tools:text="2008/08/08 08:00"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/opinionContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="15dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="12dp"
                    android:textColor="@color/opinionText"
                    android:textSize="14sp"
                    tools:text="黄金涨涨涨黄金涨涨涨黄金涨涨涨黄金涨涨涨黄金涨涨涨黄金涨涨涨黄金涨涨涨黄金涨涨涨黄金涨涨涨黄金涨涨涨黄金涨涨涨"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="15sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bigVarietyName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_product"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        tools:text="@string/stock"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:background="@drawable/bg_product_up_down">

                        <TextView
                            android:id="@+id/varietyName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/blackAssist"
                            android:textSize="14sp"
                            tools:text="松柏科技"/>

                        <TextView
                            android:id="@+id/lastPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:layout_toLeftOf="@+id/upDownArea"
                            android:textColor="@color/redPrimary"
                            android:textSize="14sp"
                            tools:text="88.88"/>

                        <LinearLayout
                            android:id="@+id/upDownArea"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="13dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/upDownPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/redPrimary"
                                android:textSize="9sp"
                                tools:text="+8.88"/>

                            <TextView
                                android:id="@+id/upDownPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColor="@color/redPrimary"
                                android:textSize="9sp"
                                tools:text="+10.00%"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/loveNum"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_love"
                        android:drawableLeft="@drawable/bg_love"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="@color/love_text"
                        android:textSize="10sp"
                        tools:text="8888"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@color/greyLightAssist"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:drawableLeft="@drawable/ic_discussion_area"
                        android:drawablePadding="5dp"
                        android:text="@string/discussion_area"
                        android:textColor="@color/secondaryText"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/commentNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/secondaryText"
                        android:textSize="14sp"
                        tools:text="@string/comment_number"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.sbai.finance.view.MyListView
                        android:id="@android:id/list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@drawable/divider_economic_circle_list"
                        android:dividerHeight="0.5dp"
                        android:footerDividersEnabled="false"
                        android:headerDividersEnabled="false"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@android:id/empty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="16dp"
                        android:drawableTop="@drawable/img_no_message"
                        android:gravity="center_horizontal"
                        android:paddingTop="50dp"
                        android:text="@string/quick_to_express_your_opinion"
                        android:textColor="@color/assistText"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/tab_background"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/commentContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:background="@null"
            android:hint="@string/comment"
            android:padding="13dp"
            android:textColorHint="@color/hintText"
            android:textSize="15sp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/greyLightAssist"/>

        <TextView
            android:id="@+id/reply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/reply"
            android:textColor="#5f6166"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>