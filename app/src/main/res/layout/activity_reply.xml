<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sbai.finance.activity.miss.ReplyActivity">

    <com.sbai.finance.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:bottomHasSplitLine="true"
        app:titleText="@string/reply"/>

    <EditText
        android:id="@+id/questionComment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white"
        android:gravity="top"
        android:hint="回复上善若水"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding"
        android:paddingTop="12dp"
        android:textColor="@color/blackPrimary"
        android:textColorHint="@color/unluckyText"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/wordsNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white"
        android:gravity="right"
        android:paddingBottom="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding"
        android:text="0/140"
        android:textColor="@color/unluckyText"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/publish"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="@dimen/common_padding"
        android:layout_marginRight="@dimen/common_padding"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_commit_rounded"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/publish"
        android:textColor="@android:color/white"
        android:textSize="15sp"/>

</LinearLayout>
