<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splitLineColor"
    android:orientation="vertical"
    tools:context="com.sbai.finance.activity.mine.setting.SafetySettingActivity">

    <com.sbai.finance.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:titleText="@string/safety_setting"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/modify_safety_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:drawableRight="@drawable/ic_arrow_right_tint"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:padding="@dimen/common_padding"
        android:text="@string/modify_safety_password"
        android:textColor="@color/primaryText"
        android:textSize="15sp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/forget_safety_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:background="@drawable/bg_white"
        android:drawableRight="@drawable/ic_arrow_right_tint"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:padding="@dimen/common_padding"
        android:text="@string/forget_safety_password"
        android:textColor="@color/primaryText"
        android:textSize="15sp"/>
</LinearLayout>
