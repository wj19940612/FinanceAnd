<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sbai.finance.activity.training.CreditIntroduceActivity">

    <com.sbai.finance.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:hasBottomSplitLine="true"
        app:splitLineColor="@color/split"
        app:titleText="@string/understand_score"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <com.sbai.finance.view.leveltest.ScoreView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="215dp"
                app:middleLoopCircleColor="@color/background"
                app:outSideCircleColor="@color/split"
                app:radarLineColor="@color/split"
                app:showInsideCircle="true"/>

            <com.sbai.finance.view.training.ScoreProgressView
                android:id="@+id/scoreProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="42dp"
                android:paddingRight="30dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:minHeight="160dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/bg_score_explain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bg_score_explain"
                    android:paddingBottom="18dp"
                    android:paddingLeft="@dimen/common_padding"
                    android:paddingRight="@dimen/common_padding"
                    android:paddingTop="15dp"
                    android:text="@string/score_explain_content"
                    android:textColor="#E7A05D"/>

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_score_explain_rounded"
                    android:gravity="center"
                    android:text="@string/score_explain_title"
                    android:textColor="@color/luckyText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bg_score_explain"
                    android:layout_marginTop="20dp"
                    android:text="@string/exponent_specification"
                    android:textColor="@color/luckyText"
                    android:textSize="15sp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_line_division_center"
                android:gravity="center"
                android:minHeight="240dp"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:drawablePadding="15dp"
                    android:drawableTop="@drawable/bg_score_explain_master_theoretical"
                    android:gravity="center"
                    android:text="@string/master_theoretical"
                    android:textColor="@color/blackPrimary"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/master_theoretical_introduce"
                    android:textColor="@color/luckyText"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_line_division_center"
                android:gravity="center"
                android:minHeight="240dp"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:drawablePadding="15dp"
                    android:drawableTop="@drawable/bg_score_explain_index_analysis"
                    android:gravity="center"
                    android:text="@string/index_analysis"
                    android:textColor="@color/blackPrimary"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/index_analysis_introduce"
                    android:textColor="@color/luckyText"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_line_division_center"
                android:gravity="center"
                android:minHeight="240dp"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:drawablePadding="15dp"
                    android:drawableTop="@drawable/bg_score_explain_fundamentals"
                    android:gravity="center"
                    android:text="@string/fundamentals"
                    android:textColor="@color/blackPrimary"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/fundamentals_introduce"
                    android:textColor="@color/luckyText"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_line_division_center"
                android:gravity="center"
                android:minHeight="240dp"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:drawablePadding="15dp"
                    android:drawableTop="@drawable/bg_score_explain_risk_control"
                    android:gravity="center"
                    android:text="@string/risk_control"
                    android:textColor="@color/blackPrimary"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/risk_control_introduce"
                    android:textColor="@color/luckyText"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_line_division_center"
                android:gravity="center"
                android:minHeight="240dp"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:drawablePadding="15dp"
                    android:drawableTop="@drawable/bg_score_explain_earning_power"
                    android:gravity="center"
                    android:text="@string/earning_power"
                    android:textColor="@color/blackPrimary"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/earning_power_introduce"
                    android:textColor="@color/luckyText"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="@color/background"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
