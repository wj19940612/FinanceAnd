<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.sbai.finance.activity.mine.setting.SettingActivity">

    <com.sbai.finance.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:backIcon="@drawable/ic_tb_back_black"
        app:barBackground="@android:color/white"
        app:titleText="@string/setting"
        app:titleTextColor="@color/primaryText"/>

    <com.sbai.finance.view.IconTextRow
        android:id="@+id/securityCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_split_height"
        android:background="@drawable/bg_white"
        android:minHeight="@dimen/common_height"
        app:rightIcon="@drawable/ic_arrow_right_tint"
        app:rowText="@string/security_center"
        app:rowTextColor="@color/primaryText"
        app:rowTextSize="15sp"/>

    <com.sbai.finance.view.IconTextRow
        android:id="@+id/shieldSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:visibility="gone"
        app:rightIcon="@drawable/ic_arrow_right_tint"
        app:rowText="@string/shield"
        app:rowTextColor="@color/primaryText"
        app:rowTextSize="15sp"/>

    <com.sbai.finance.view.IconTextRow
        android:id="@+id/newMessageNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_split_height"
        android:background="@drawable/bg_white"
        android:minHeight="@dimen/common_height"
        app:rightIcon="@drawable/ic_arrow_right_tint"
        app:rowText="@string/new_news_notification"
        app:rowTextColor="@color/primaryText"
        app:rowTextSize="15sp"/>

    <View
        android:id="@+id/appInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
