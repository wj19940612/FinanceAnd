<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyLightAssist"
    android:orientation="vertical"
    tools:context="com.sbai.finance.activity.mine.UserDataActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/assistText">

        <com.sbai.finance.view.TitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backFeature="true"
            app:barBackground="@android:color/transparent"
            app:titleText="@string/user_data"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleBar"
            android:layout_margin="@dimen/common_margin">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/userHeadImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@mipmap/ic_launcher_round"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/userHeadImage"
                android:drawableLeft="@android:drawable/ic_delete"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="张三王八"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName"
                android:layout_toRightOf="@+id/userHeadImage"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="浙江 温州"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/attentionAndFansNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/userHeadImage"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="关注 100 / 粉丝 200"/>
        </RelativeLayout>
    </RelativeLayout>

    <com.sbai.finance.view.IconTextRow
        android:id="@+id/hisPublish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        app:leftIcon="@android:drawable/ic_delete"
        app:rightIcon="@drawable/ic_arrow_mine_list_more"
        app:rowText="TA的发表"/>

    <LinearLayout
        android:id="@+id/realNameApprove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="13sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_delete"
            android:drawablePadding="14dp"
            android:gravity="center"
            android:text="@string/real_name_approve"
            android:textColor="@android:color/black"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_delete"
            android:gravity="center"
            android:text="@string/is_approve"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/attention"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_white"
            android:gravity="center"
            android:text="@string/attention"
            android:textColor="@color/primaryText"
            android:textSize="16sp"/>

        <View
            android:id="@+id/divider"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/shield"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_white"
            android:gravity="center"
            android:text="@string/shield"
            android:textColor="@color/primaryText"
            android:textSize="16sp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/report"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_white"
            android:gravity="center"
            android:text="@string/report"
            android:textColor="@color/primaryText"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>
