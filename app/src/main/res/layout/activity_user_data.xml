<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splitLineColor"
    android:orientation="vertical"
    tools:context="com.sbai.finance.activity.mine.UserDataActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_userdata_head">

        <com.sbai.finance.view.TitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backFeature="true"
            app:barBackground="@android:color/transparent"
            app:titleText="@string/user_data"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/titleBar">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="15dp"
                tools:src="@drawable/ic_default_avatar_big"/>

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/avatar"
                android:layout_toRightOf="@+id/avatar"
                android:drawablePadding="8dp"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                tools:drawableLeft="@drawable/ic_male"
                tools:text="古天乐"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/avatar"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/greyAssist"
                android:textSize="12sp"
                tools:text="中国 香港"/>

            <TextView
                android:id="@+id/attentionNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/avatar"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text="@string/attention_number"/>

            <TextView
                android:id="@+id/diagonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/attentionNum"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text=" / "/>

            <TextView
                android:id="@+id/fansNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/diagonal"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text="@string/fans_number"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hisPublish"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_white"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <TextView
            android:id="@+id/hisPublishText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_his_publish"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:text="TA的发表"
            android:textColor="@color/blackAssist"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right_tint"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/realNameAuthentication"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_white"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_real_name_authentication"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:text="@string/real_name_authentication"
            android:textColor="@color/blackAssist"/>

        <TextView
            android:id="@+id/authentication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="@string/unauthorized"
            android:textColor="@color/assistSecondText"
            android:textSize="13sp"
            tools:drawableLeft="@drawable/ic_failed"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/attentionShieldArea"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:visibility="visible">

        <TextView
            android:id="@+id/attention"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_white"
            android:gravity="center"
            android:textColor="@color/redPrimary"
            android:textSize="16sp"
            tools:text="@string/attention"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/splitLineColor"/>

        <TextView
            android:id="@+id/shield"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_white"
            android:gravity="center"
            android:textColor="@color/primaryText"
            android:textSize="16sp"
            tools:text="@string/shield_him"/>
    </LinearLayout>
</LinearLayout>
