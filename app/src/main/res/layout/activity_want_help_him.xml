<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/greyLightAssist"
              android:orientation="vertical">

    <com.sbai.finance.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:barBackground="@color/blackAssist"
        app:titleText="@string/want_help_him"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:visibility="gone"/>

        <TextView
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="16dp"
            android:drawableTop="@drawable/img_no_message"
            android:gravity="center_horizontal"
            android:paddingTop="180dp"
            android:textColor="@color/assistText"
            android:textSize="20sp"/>
    </LinearLayout>

    <TextView

        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:text="支付意向金"
        android:layout_width="match_parent"
        android:layout_height="49dp"/>
</LinearLayout>