<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="94dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="@android:color/transparent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_battle_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp">

                    <ImageView
                        android:id="@+id/createAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"/>

                    <ImageView
                        android:id="@+id/createKo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_versus_ko"
                        android:visibility="gone"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/createName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/varietyName"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="visible"/>

                <RelativeLayout
                    android:id="@+id/fighterDataArea"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginTop="23dp">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/bg_battle_progress"
                        android:secondaryProgress="100"/>

                    <TextView
                        android:id="@+id/myProfit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/userProfit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:paddingRight="5dp"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#9c9c9c"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:textColor="#9c9c9c"
                        android:textSize="10sp"/>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/myPerspective"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/myPraise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:paddingBottom="12dp"
                            android:textColor="#9c9c9c"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/userPraise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:paddingBottom="12dp"
                            android:textColor="#9c9c9c"
                            android:textSize="10sp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/userPerspective"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/myPraiseButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/bg_battle_praise"
                            android:clickable="true"
                            android:drawableLeft="@drawable/bg_battle_praise_text"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/userPraiseButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/bg_battle_praise"
                            android:clickable="true"
                            android:drawableLeft="@drawable/bg_battle_praise_text"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="10sp"/>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp">

                    <ImageView
                        android:id="@+id/againstAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"/>

                    <ImageView
                        android:id="@+id/againstKo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_versus_ko"
                        android:visibility="gone"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/againstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>