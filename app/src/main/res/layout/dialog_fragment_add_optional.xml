<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:orientation="vertical"
              android:layout_marginLeft="@dimen/dp_10"
              android:layout_marginRight="@dimen/dp_10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_optional">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:textColor="@color/greyAssist"
            android:text="@string/choose_optional"/>
        <include layout="@layout/split_line_grey_light"/>
        <TextView
            android:id="@+id/stock"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/stock"
            android:textColor="#0076ff"
            android:textSize="17sp"/>
        <include layout="@layout/split_line_grey_light"/>
        <TextView
            android:id="@+id/future"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center"
            android:text="@string/future"
            android:textColor="#0076ff"
            android:textSize="17sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/bg_optional"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/take_phone_cancel"
        android:textColor="@color/blackAssist"
        android:textSize="18sp"/>

</LinearLayout>