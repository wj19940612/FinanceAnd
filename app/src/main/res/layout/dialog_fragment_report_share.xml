<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/background"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_padding"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="@string/share_to_1"
        android:textColor="@color/unluckyText"
        android:textSize="13sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/weChatFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@drawable/ic_report_share_wechat"
            android:gravity="center"
            android:text="@string/wechat"
            android:textColor="@color/blackPrimary"
            android:textSize="12sp"/>

        <Space
            android:layout_width="60dp"
            android:layout_height="1px"/>

        <TextView
            android:id="@+id/weChatFriendCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@drawable/ic_report_share_friends"
            android:gravity="center"
            android:text="@string/wechat_circle"
            android:textColor="@color/blackPrimary"
            android:textSize="12sp"/>

        <Space
            android:layout_width="60dp"
            android:layout_height="1px"/>

        <TextView
            android:id="@+id/weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@drawable/ic_report_share_weibo"
            android:gravity="center"
            android:text="@string/sina_weibo"
            android:textColor="@color/blackPrimary"
            android:textSize="12sp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/common_padding"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/blackPrimary"
        android:textSize="@dimen/btn_size"/>

</LinearLayout>