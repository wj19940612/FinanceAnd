<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="62dp">

        <RelativeLayout
            android:id="@+id/flashLayout"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/successIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_task_dialog_integration"/>

            <ImageView
                android:id="@+id/successFlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_task_dialog_flash"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/flashLayout"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:text="@string/integration"/>

        <TextView
            android:id="@+id/integration"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tip"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/taskProgress"/>

    </RelativeLayout>

</RelativeLayout>