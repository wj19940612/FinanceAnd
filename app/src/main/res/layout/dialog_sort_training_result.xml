<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_yellow_round_eight_top"
            android:gravity="center"
            android:minHeight="140dp">

            <ImageView
                android:id="@+id/titleIcon"
                android:layout_width="118dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_training_success"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_rounded_eight_bottom"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hintTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:textColor="@color/blackPrimary"
                android:textSize="22sp"
                tools:text="哈哈哈"/>

            <TextView
                android:id="@+id/hintContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textColor="@color/blackPrimary"
                tools:text="哈哈哈"/>

            <TextView
                android:id="@+id/completeTraining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="28dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:minHeight="44dp"
                android:minWidth="240dp"
                android:text="@string/complete_training"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>