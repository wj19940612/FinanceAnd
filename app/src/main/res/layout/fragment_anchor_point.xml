<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/background"
             tools:context="com.sbai.finance.fragment.anchor.AnchorPointFragment">

    <com.sbai.finance.view.EmptyRecyclerView
        android:background="@color/background"
        android:layout_marginTop="@dimen/common_padding"
        android:id="@+id/emptyRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/img_no_message"
        android:gravity="center"
        android:text="@string/now_not_has_point"
        android:textSize="15sp"
        android:visibility="gone"/>
</FrameLayout>
