<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.sbai.finance.fragment.miss.MissAskFragment">

    <TextView
        android:id="@+id/empty"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableTop="@drawable/img_no_message"
        android:text="@string/ask_miss"/>

    <com.sbai.finance.view.EmptyRecyclerView
        android:id="@+id/emptyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
