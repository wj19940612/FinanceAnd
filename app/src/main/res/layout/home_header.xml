<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/future"
            style="@style/HomeListHeaderButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="14dp"
            android:background="@drawable/bg_pressable"
            android:drawableTop="@drawable/fanli_content_icon_futures"
            android:textSize="13sp"
            android:textColor="@color/blackAssist"
            android:text="@string/future"/>

        <TextView
            android:id="@+id/stock"
            style="@style/HomeListHeaderButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="14dp"
            android:background="@drawable/bg_pressable"
            android:drawableTop="@drawable/fanli_content_icon_shares"
            android:textSize="13sp"
            android:textColor="@color/blackAssist"
            android:text="@string/stock"/>

        <TextView
            android:id="@+id/help"
            style="@style/HomeListHeaderButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="14dp"
            android:background="@drawable/bg_pressable"
            android:drawableTop="@drawable/fanli_content_icon_help"
            android:textSize="13sp"
            android:textColor="@color/blackAssist"
            android:text="@string/help"/>

        <TextView
            android:id="@+id/selfChoice"
            style="@style/HomeListHeaderButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="14dp"
            android:background="@drawable/bg_pressable"
            android:drawableTop="@drawable/fanli_content_icon_optional"
            android:textSize="13sp"
            android:textColor="@color/blackAssist"
            android:text="@string/self_choice"/>
    </LinearLayout>
</LinearLayout>