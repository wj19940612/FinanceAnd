<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/userPortrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_default_avatar"/>
        <TextView
            android:id="@+id/userNameLand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/blackAssist"
            android:textSize="15sp"
            tools:text="@string/user_address"/>
        <TextView
            android:id="@+id/publishTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/assistText"
            android:gravity="right"
            android:layout_gravity="center"
            android:lineSpacingExtra="5dp"
            android:textSize="11sp"
            android:text="@string/borrow_in_time"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_help"
            android:gravity="center"
            android:text="@string/borrow_money"
            android:textColor="@android:color/white"
            android:textSize="10sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/bg_product_up_down"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/need_amount"
                    android:textColor="@color/secondaryText"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/needAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/blackAssist"
                    tools:text="@string/RMB"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/borrow_time"
                    android:textColor="@color/secondaryText"
                    android:textSize="10sp"/>


                <TextView
                    android:id="@+id/borrowTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/blackAssist"
                    tools:text="@string/day"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/borrow_interest"
                    android:textColor="@color/secondaryText"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/borrowInterest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/redPrimary"
                    tools:text="@string/RMB"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/split_line_grey_light"/>
    <LinearLayout
        android:id="@+id/borrowStatus"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:visibility="visible">
        <TextView
            android:id="@+id/call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_pressable"
            android:textSize="13sp"
            android:textColor="@color/blueAssist"
            android:text="@string/call"/>
        <TextView
            android:id="@+id/alreadyRepay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/redPrimary"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:text="@string/already_repay"/>
        <TextView
            android:id="@+id/alreadyRepayment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/greyAssist"
            android:text="@string/already_repayment"/>
    </LinearLayout>

</LinearLayout>