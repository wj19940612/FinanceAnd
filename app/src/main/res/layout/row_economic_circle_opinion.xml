<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="@color/background"/>

    <RelativeLayout
        android:id="@+id/hotArea"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_default_avatar"/>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/avatar"
            android:textColor="@color/primaryText"
            android:textSize="16sp"
            tools:text="反方向的钟"/>

        <TextView
            android:id="@+id/isAttention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/userName"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/userName"
            android:textColor="@color/unluckyText"
            android:textSize="10sp"
            tools:text="@string/is_attention"/>
    </RelativeLayout>


    <com.sbai.finance.view.CollapsedTextLayout
        android:id="@+id/opinionContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="14dp"
        android:visibility="visible"/>

<!--    <com.sbai.finance.view.CollapsedTextView
        android:id="@+id/opinionContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="14dp"
        android:lineSpacingExtra="6dp"
        app:trimLines="2"
        android:textColor="@color/blackAssist"
        android:textSize="14sp"
        android:visibility="visible"
        tools:text="穿梭时间的画面的钟,从反方向开始移动.所有回忆对着我进攻,我的伤口被你拆封.誓言太沉重泪被纵容,脸上汹涌失控."/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/bg_product"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            tools:src="@drawable/ic_opinion_up_succeed"/>

        <TextView
            android:id="@+id/bigVarietyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/primaryText"
            android:textSize="14sp"
            tools:text="@string/big_variety_name"/>

        <TextView
            android:id="@+id/varietyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/primaryText"
            android:textSize="14sp"
            tools:text="乐米金融"/>
    </LinearLayout>

    <TextView
        android:id="@+id/publishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/unluckyText"
        android:textSize="10sp"
        tools:text="10:00"/>
</LinearLayout>