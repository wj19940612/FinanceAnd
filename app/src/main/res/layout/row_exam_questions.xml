<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/card"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/exam"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginLeft="@dimen/common_padding"
                                    android:layout_marginRight="@dimen/common_padding"
                                    app:cardBackgroundColor="@color/evaluationQuestionBg"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:minHeight="80dp"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="2dp"
                                    app:contentPaddingBottom="16dp"
                                    app:contentPaddingLeft="40dp"
                                    app:contentPaddingRight="34dp"
                                    app:contentPaddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/resultTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/blackPrimary"
            android:textSize="17sp"
            tools:text="A"/>

        <TextView
            android:id="@+id/result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="22dp"
            android:layout_weight="1"
            android:textColor="@color/love_text"
            android:textSize="17sp"
            tools:text=" 这是我的答案空间的房间打开数据反馈减肥的开始了就分了"/>
    </LinearLayout>

</android.support.v7.widget.CardView>