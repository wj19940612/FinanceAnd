<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Space
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="12dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="@dimen/common_padding"
        android:layout_marginRight="@dimen/common_padding"
        android:background="@android:color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:minHeight="100dp"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/eight_radius"
        app:cardElevation="3dp"
        app:cardMaxElevation="4dp"
        app:contentPadding="@dimen/common_padding"
        app:contentPaddingBottom="9dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textColor="@color/blackAssist"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="LV1 入门"/>

            <TextView
                android:id="@+id/accuracy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableRight="@drawable/ic_arrow_right_tint"
                android:padding="1dp"
                android:textColor="@color/luckyText"
                tools:text="正确率19.5%，超过20%的同学"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="1dp"
                android:textColor="@color/luckyText"
                tools:text="2017-05-05"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>