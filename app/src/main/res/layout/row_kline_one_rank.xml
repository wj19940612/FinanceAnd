<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/arenaAwardLL"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/headerLl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_arena_ranking_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="@string/ranking_"
            android:textColor="@color/arenaRankingTitleTextColor"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="53dp"
            android:gravity="center"
            android:text="@string/app_user"
            android:textSize="12sp"
            android:textColor="@color/arenaRankingTitleTextColor"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="56dp"
            android:gravity="center_vertical|end"
            android:text="@string/win_rate_txt"
            android:textSize="12sp"
            android:textColor="@color/arenaRankingTitleTextColor"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rankingLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgArenaRanking"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rank"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_toRightOf="@+id/rank"
            android:layout_marginLeft="14dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/avatar"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/winRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/avatar"
            android:layout_marginLeft="191dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

</LinearLayout>