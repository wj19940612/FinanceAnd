    android:id="@+id/relativeLayout"
    android:layout_width="150dp"
    android:layout_height="195dp"
    android:layout_marginLeft="@dimen/common_padding"
    android:layout_marginRight="1dp"
    android:background="@drawable/bg_white_rounded_eight_radius"
    android:orientation="vertical"
    android:paddingBottom="7.5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/common_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="@dimen/common_padding"
        android:drawableTop="@drawable/ic_home_training_more"
        android:text="@string/more_training"
        android:textColor="@color/unluckyText"/>
