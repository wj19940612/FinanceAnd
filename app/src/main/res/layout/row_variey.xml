<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rootView"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tool="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_white"
              android:orientation="horizontal"
              android:padding="@dimen/common_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/futureName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/list_title_size"
            tool:text="美原油"/>

        <TextView
            android:id="@+id/futureCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textColor="#838489"
            android:textSize="@dimen/list_hint_size"
            tool:text="CL1709"/>
    </LinearLayout>

    <TextView
        android:id="@+id/lastPrice"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_weight="4"
        android:gravity="right|center"
        android:text="@string/stock_no_data"
        android:textColor="@color/up_or_down_price_color"
        android:textSize="@dimen/navigate_size"
        tool:text="1.180"/>

    <TextView
        android:id="@+id/rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:background="@drawable/bg_rate"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="@string/stock_no_data"
        android:textColor="@android:color/white"
        android:textSize="@dimen/navigate_size"
        tool:text="+25.53%"/>
</LinearLayout>