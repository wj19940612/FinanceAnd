<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/buyIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_tb_buy_in"
        android:gravity="center"
        android:minHeight="30dp"
        android:minWidth="105dp"
        android:text="@string/buy_in"
        android:textColor="@color/tb_trade_operate_text"/>

    <TextView
        android:id="@+id/sellOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_tb_sell_out"
        android:gravity="center"
        android:minHeight="30dp"
        android:minWidth="105dp"
        android:text="@string/sell_out"
        android:textColor="@color/tb_trade_operate_text"/>
</LinearLayout>