<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#564F68"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.sbai.finance.view.BattleProgress
        android:id="@+id/battleProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"/>

    <FrameLayout
        android:id="@+id/owner"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_battle_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/battleProgress"
        app:layout_constraintEnd_toStartOf="@+id/battleProgress"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/battleProgress">

        <ImageView
            android:id="@+id/ownerAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_battle_avatar"
            android:clickable="false"
            android:padding="2dp"
            android:src="@drawable/ic_default_avatar_big"/>

        <ImageView
            android:id="@+id/ownerKo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_versus_ko"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@+id/ownerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/wait_to_join"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/owner"
        app:layout_constraintStart_toStartOf="@+id/owner"
        app:layout_constraintTop_toBottomOf="@+id/owner"/>

    <TextView
        android:id="@+id/ownerPraise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:maxLines="1"
        android:textColor="@color/unluckyText"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/ownerName"
        app:layout_constraintStart_toEndOf="@+id/ownerName"
        tools:text="0赞"/>

    <FrameLayout
        android:id="@+id/challenger"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_battle_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/battleProgress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/battleProgress"
        app:layout_constraintTop_toTopOf="@+id/battleProgress">

        <ImageView
            android:id="@+id/challengerAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/ic_default_avatar_big"/>

        <ImageView
            android:id="@+id/challengerKo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_versus_ko"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@+id/challengerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/wait_to_join"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/challenger"
        app:layout_constraintStart_toStartOf="@+id/challenger"
        app:layout_constraintTop_toBottomOf="@+id/challenger"/>

    <TextView
        android:id="@+id/challengerPraise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:textColor="@color/unluckyText"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/challengerName"
        app:layout_constraintEnd_toStartOf="@+id/challengerName"
        tools:text="0赞"/>
</android.support.constraint.ConstraintLayout>