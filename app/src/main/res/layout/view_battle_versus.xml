<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#564F68"
                android:gravity="center_vertical"
                android:orientation="horizontal">

    <com.sbai.finance.view.BattleProgress
        android:id="@+id/battleProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textSize="16sp"/>

    <FrameLayout
        android:id="@+id/owner"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/battleProgress"
        android:background="@drawable/bg_battle_avatar">

        <ImageView
            android:id="@+id/ownerAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_battle_avatar"
            android:clickable="false"
            android:src="@drawable/ic_default_avatar_big"/>

        <ImageView
            android:id="@+id/ownerKo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_versus_ko"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@+id/ownerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/owner"
        android:layout_below="@id/owner"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/wait_to_join"
        android:textColor="@android:color/white"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/ownerPraise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ownerName"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/ownerName"
        android:maxLines="1"
        android:textColor="@color/unluckyText"
        android:textSize="12sp"
        tools:text="0赞"/>

    <FrameLayout
        android:id="@+id/challenger"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/battleProgress"
        android:background="@drawable/bg_battle_avatar">

        <ImageView
            android:id="@+id/challengerAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:src="@drawable/ic_default_avatar_big"/>

        <ImageView
            android:id="@+id/challengerKo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_versus_ko"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@+id/challengerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/challenger"
        android:layout_below="@id/challenger"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/wait_to_join"
        android:textColor="@android:color/white"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/challengerPraise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/challengerName"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/challengerName"
        android:textColor="@color/unluckyText"
        android:textSize="12sp"
        tools:text="0赞"/>
</RelativeLayout>