<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.sbai.finance.view.radio.AnchorRecommendRadioLayout
        android:id="@+id/missRadioLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_padding"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.sbai.finance.view.MissRadioViewSwitcher
        android:id="@+id/missRadioViewSwitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_padding"
        app:layout_constraintTop_toBottomOf="@+id/missRadioLayout"/>

    <LinearLayout
        android:id="@+id/pointLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_padding"
        android:layout_marginTop="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding"
        app:layout_constraintTop_toBottomOf="@+id/missRadioViewSwitcher">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_anchor_point"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/split"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>