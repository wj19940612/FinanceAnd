<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/progressLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp">

        <View
            android:id="@+id/firstProgress"
            android:layout_width="60dp"
            android:layout_height="6dp"
            android:background="@drawable/bg_task_left_progress"/>


        <View
            android:id="@+id/secondProgress"
            android:layout_width="60dp"
            android:layout_height="6dp"
            android:layout_marginLeft="1dp"
            android:background="@color/taskProgress"/>

        <View
            android:id="@+id/thirdProgress"
            android:layout_width="60dp"
            android:layout_height="6dp"
            android:layout_marginLeft="1dp"
            android:background="@color/taskProgress"/>

        <View
            android:id="@+id/fourthProgress"
            android:layout_width="60dp"
            android:layout_height="6dp"
            android:layout_marginLeft="1dp"
            android:background="@color/taskProgress"/>

        <View
            android:id="@+id/fifthProgress"
            android:layout_width="60dp"
            android:layout_height="6dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/bg_task_right_progress"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/firstAward"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_above="@+id/progressLayout"
        android:layout_marginLeft="156dp"
        android:background="@drawable/ic_task_award"/>

    <ImageView
        android:id="@+id/secondAward"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_above="@+id/progressLayout"
        android:layout_marginLeft="278dp"
        android:background="@drawable/ic_task_award_not"/>
</merge>