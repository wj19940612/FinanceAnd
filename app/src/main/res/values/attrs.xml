<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PageIndicator">
        <attr name="indicators" format="integer"/>
        <attr name="indicatorsInterval" format="dimension"/>
        <attr name="point" format="color"/>
        <attr name="selectedPoint" format="color"/>
        <attr name="pointRadius" format="dimension"/>
        <attr name="infinite" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="BottomTabs">
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="interval" format="dimension"/>
        <attr name="textPaddingTop" format="dimension"/>
        <attr name="textPaddingBottom" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="IconTextRow">
        <attr name="leftIcon" format="reference"/>
        <attr name="rightIcon" format="reference"/>
        <attr name="rightIconVisibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="4"/>
            <enum name="gone" value="8"/>
        </attr>
        <attr name="subText" format="reference|string"/>
        <attr name="subTextSize" format="reference|dimension"/>
        <attr name="subTextColor" format="color"/>
        <attr name="subTextBackground" format="reference"/>
        <attr name="rowText" format="reference|string"/>
        <attr name="rowTextSize" format="dimension"/>
        <attr name="rowTextColor" format="color"/>
        <attr name="rowSubText" format="reference|string"/>
        <attr name="rowSubTextSize" format="dimension"/>
        <attr name="rowSubTextColor" format="color"/>
        <attr name="rowTextSpaceExtra" format="dimension"/>
        <attr name="rowVerticalPadding" format="dimension"/>
        <attr name="hasBottomSplitLine" format="boolean"/>
        <attr name="splitLineColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="titleText" format="reference|string"/>
        <attr name="titleTextSize" format="dimension"/>
        <attr name="titleTextColor" format="color"/>
        <attr name="customView" format="reference"/>
        <attr name="rightBackground" format="reference"/>
        <attr name="rightText" format="reference|string"/>
        <attr name="rightTextSize" format="dimension"/>
        <attr name="rightTextColor" format="color"/>
        <attr name="rightImage" format="reference"/>
        <attr name="rightVisible" format="boolean"/>
        <attr name="backFeature" format="boolean"/>
        <attr name="backIcon" format="reference"/>
        <attr name="barBackground" format="reference"/>
        <attr name="bottomHasSplitLine" format="boolean"/>
        <attr name="bottomSplitLineColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="TradeFloatButtons">
        <attr name="hasTradeButton" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RedPointTipTextView">
        <attr name="redPointTipVisibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="4"/>
            <enum name="gone" value="8"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="BottomTextViewLayout">
        <attr name="headline_text" format="string|reference"/>
        <attr name="headline_text_size" format="dimension|reference"/>
        <attr name="headline_text_color" format="color|reference"/>
        <attr name="info_text" format="string|reference"/>
        <attr name="info_text_size" format="dimension|reference"/>
        <attr name="info_text_color" format="color|reference"/>
        <attr name="default_text" format="string|reference"/>
        <attr name="headline_text_minWidth" format="dimension|reference"/>
        <attr name="view_gravity" format="integer"/>
        <attr name="headline_text_padding_right" format="dimension|reference"/>
        <attr name="info_text_lineSpacingExtra" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="RedPointTextView">
        <!-- 提示数字背景颜色 -->
        <attr name="badge_bg_color" format="color"/>
        <!-- 提示数字颜色 -->
        <attr name="badge_txt_color" format="color"/>
        <!-- 提示数字大小 -->
        <attr name="badge_txt_size" format="dimension|reference"/>
        <!-- 提示数字 -->
        <attr name="badge_txt_num" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CollapsedTextView">
        <attr name="expandedText" format="string"/>
        <attr name="collapsedText" format="string"/>
        <attr name="trimLines" format="integer"/>
    </declare-styleable>

    <declare-styleable name="AutofitTextView">
        <!-- Minimum size of the text. -->
        <attr name="minTextSize" format="dimension"/>
        <!-- Amount of precision used to calculate the correct text size to fit within its
        bounds. Lower precision is more precise and takes more time. -->
        <attr name="precision" format="float"/>
        <!-- Defines whether to automatically resize text to fit to the view's bounds. -->
        <attr name="sizeToFit" format="boolean"/>
        <!-- Max view width that cannot beyond this -->
        <attr name="maxViewWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="BattleProgress">
        <attr name="progressDrawable" format="reference|color"/>
        <attr name="orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="rightPadding" format="dimension"/>
        <attr name="leftPadding" format="dimension"/>
        <attr name="max" format="dimension"/>
        <attr name="progress" format="dimension"/>
        <attr name="secondaryProgress" format="dimension"/>
        <attr name="rightTextColor" format="color|reference"/>
        <attr name="rightTextSize" format="dimension"/>
        <attr name="rightText" format="reference|string"/>
        <attr name="leftTextColor" format="color|reference"/>
        <attr name="leftTextSize" format="dimension"/>
        <attr name="leftText" format="reference|string"/>

    </declare-styleable>
</resources>