<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Common attrs-->
    <attr name="hasBottomSplitLine" format="boolean"/>
    <attr name="splitLineColor" format="color|reference"/>

    <declare-styleable name="PageIndicator">
        <attr name="indicators" format="integer"/>
        <attr name="indicatorsInterval" format="dimension"/>
        <attr name="point" format="color"/>
        <attr name="selectedPoint" format="color"/>
        <attr name="pointRadius" format="dimension"/>
        <attr name="pointWidth" format="dimension"/>
        <attr name="pointHeight" format="dimension"/>
        <attr name="infinite" format="boolean"/>
        <attr name="isRect" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="HomeBanner">
        <attr name="isRectIndicator" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SlidingTabTitle">
        <attr name="showBack" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="BottomTabs">
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="interval" format="dimension"/>
        <attr name="textPaddingTop" format="dimension"/>
        <attr name="textPaddingBottom" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PasswordEditText">
        <attr name="textHint" format="reference|string"/>
        <attr name="hasBottomSplitLine"/>
        <attr name="splitLineColor"/>
        <attr name="maxCharNum" format="integer"/>
    </declare-styleable>

    <!--带图标和文字的行控件-->
    <declare-styleable name="IconTextRow">
        <attr name="leftIcon" format="reference"/>
        <attr name="rightIcon" format="reference"/>
        <attr name="rightIconVisibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="4"/>
            <enum name="gone" value="8"/>
        </attr>
        <attr name="subText" format="reference|string"/>
        <attr name="subTextSize" format="reference|dimension"/>
        <attr name="subTextColor" format="color"/>
        <attr name="subTextBackground" format="reference"/>
        <attr name="subTextLeftDrawable" format="reference"/>
        <attr name="subTextRightDrawable" format="reference"/>
        <attr name="subTextRightMargin" format="reference|dimension"/>
        <attr name="subTextVisible">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="4"/>
            <enum name="gone" value="8"/>
        </attr>
        <attr name="rowText" format="reference|string"/>
        <attr name="rowTextSize" format="dimension"/>
        <attr name="rowTextColor" format="color"/>
        <attr name="rowSubText" format="reference|string"/>
        <attr name="rowSubTextSize" format="dimension"/>
        <attr name="rowSubTextColor" format="color"/>
        <attr name="rowTextSpaceExtra" format="dimension"/>
        <attr name="rowVerticalPadding" format="dimension"/>
        <attr name="rowHorizontalPadding" format="dimension"/>
        <attr name="hasBottomSplitLine"/>
        <attr name="splitLineColor"/>
        <attr name="splitLineLeftPadding" format="dimension"/>
    </declare-styleable>

    <!--每个页面都会添加的 TitleBar-->
    <declare-styleable name="TitleBar">
        <attr name="titleText" format="reference|string"/>
        <attr name="titleTextSize" format="dimension"/>
        <attr name="titleTextColor" format="color"/>
        <attr name="titleTextAlpha" format="float"/>
        <attr name="customView" format="reference"/>
        <attr name="rightBackground" format="reference"/>
        <attr name="rightText" format="reference|string"/>
        <attr name="rightTextSize" format="dimension"/>
        <attr name="rightTextColor" format="color"/>
        <attr name="rightImage" format="reference"/>
        <attr name="rightTextRightImage" format="reference"/>
        <attr name="rightVisible" format="boolean"/>
        <attr name="backFeature" format="boolean"/>
        <attr name="backIcon" format="reference"/>
        <attr name="hasBottomSplitLine"/>
        <attr name="splitLineColor"/>
        <attr name="leftViewLeftPadding" format="dimension|reference"/>
    </declare-styleable>

    <!--圆形的海浪波纹控件-->
    <declare-styleable name="WaveView">
        <attr name="initialRadius" format="dimension"/>
        <attr name="maxRadius" format="dimension"/>
        <attr name="duration" format="integer"/>
        <attr name="speed" format="integer"/>
        <attr name="color" format="color"/>
    </declare-styleable>

    <!--期货股票悬浮交易按钮控件-->
    <declare-styleable name="TradeFloatButtons">
        <attr name="hasTradeButton" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RedPointTipTextView">
        <attr name="redPointTipVisibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="4"/>
            <enum name="gone" value="8"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="BottomTextViewLayout">
        <attr name="headline_text" format="string|reference"/>
        <attr name="headline_text_size" format="dimension|reference"/>
        <attr name="headline_text_color" format="color|reference"/>
        <attr name="info_text" format="string|reference"/>
        <attr name="info_text_size" format="dimension|reference"/>
        <attr name="info_text_color" format="color|reference"/>
        <attr name="default_text" format="string|reference"/>
        <attr name="headline_text_minWidth" format="dimension|reference"/>
        <attr name="view_gravity" format="integer"/>
        <attr name="headline_text_padding_right" format="dimension|reference"/>
        <attr name="info_text_lineSpacingExtra" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="RedPointTextView">
        <!-- 提示数字背景颜色 -->
        <attr name="badge_bg_color" format="color"/>
        <!-- 提示数字颜色 -->
        <attr name="badge_txt_color" format="color"/>
        <!-- 提示数字大小 -->
        <attr name="badge_txt_size" format="dimension|reference"/>
        <!-- 提示数字 -->
        <attr name="badge_txt_num" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CollapsedTextView">
        <attr name="expandedText" format="string"/>
        <attr name="collapsedText" format="string"/>
        <attr name="trimLines" format="integer"/>
    </declare-styleable>

    <!--固定宽度自动缩小的 TextView 控件-->
    <declare-styleable name="AutofitTextView">
        <!-- Minimum size of the text. -->
        <attr name="minTextSize" format="dimension"/>
        <!-- Amount of precision used to calculate the correct text size to fit within its
        bounds. Lower precision is more precise and takes more time. -->
        <attr name="precision" format="float"/>
        <!-- Defines whether to automatically resize text to fit to the view's bounds. -->
        <attr name="sizeToFit" format="boolean"/>
        <!-- Max view width that cannot beyond this -->
        <attr name="maxViewWidth" format="dimension"/>
    </declare-styleable>

    <!--对战战绩对比条-->
    <declare-styleable name="BattleProgress">
        <attr name="android:textSize"/>
        <attr name="enable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="EditWithWordLimitView">
        <attr name="showHint" format="reference|string"/>
        <attr name="hintColor" format="reference|color"/>
        <attr name="InputTextSize" format="dimension"/>
        <attr name="InputTextColor" format="reference|color"/>
        <attr name="wordLimit" format="reference|integer"/>
        <attr name="wordWarnColor" format="color|reference"/>
        <attr name="wordTextColor" format="color|reference"/>
        <attr name="wordTextSize" format="dimension"/>
        <attr name="focusable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ScoreView">
        <attr name="areaCount" format="integer"/>
        <attr name="showScore" format="boolean"/>
        <attr name="scoreTextSizePx" format="integer"/>
        <attr name="scoreTextColor" format="color|reference"/>
        <attr name="showAreaPoint" format="boolean"/>
        <attr name="outSideCircleColor" format="color"/>
        <attr name="middleCircleColor" format="color|reference"/>
        <attr name="scoreViewTitleTextColor" format="color"/>
        <attr name="scoreViewTitleTextSizePx" format="integer"/>
        <attr name="showInsideCircle" format="boolean"/>
        <attr name="insideCircleColor" format="color|reference"/>
        <attr name="middleLoopCircleColor" format="color|reference"/>
        <attr name="valueColor" format="color|reference"/>
        <attr name="radarLineColor" format="color|reference"/>
    </declare-styleable>

    <!--分数区间 分段view  0 -200 -->
    <declare-styleable name="CreditAreaView">
        <attr name="startColor" format="color|reference"/>
        <attr name="endColor" format="color|reference"/>
        <attr name="splitColor" format="color|reference"/>
        <attr name="splitWidth" format="dimension|reference"/>
        <attr name="splitHeight" format="dimension|reference"/>
        <attr name="viewRadius" format="dimension|reference"/>
        <attr name="hasSplit" format="boolean"/>
        <attr name="notReachedCreditViewColor" format="color|reference"/>
        <attr name="credPercent" format="float"/>
        <attr name="gradeCount" format="integer"/>
    </declare-styleable>

    <!--训练的时间进度条-->
    <declare-styleable name="TrainingProgressBar">
        <attr name="boundaryColor" format="color|reference"/>
        <attr name="boundaryHeight" format="dimension|reference"/>
        <attr name="hintSplitLineColor" format="color|reference"/>
        <attr name="hintSplitLineWidth" format="dimension|reference"/>
        <attr name="hintSplitScale" format="float"/>
        <attr name="hasSplitLine" format="boolean"/>
        <attr name="isUseDefaultProgressDrawable" format="boolean"/>
    </declare-styleable>

    <!--菱形的背景色-->
    <declare-styleable name="DiamondView">
        <attr name="backgroundColor" format="color|reference"/>
        <attr name="dashWidth" format="dimension|reference"/>
        <attr name="lineHeight" format="dimension|reference"/>
        <attr name="lineWidth" format="dimension|reference"/>
        <attr name="lineColor" format="color|reference"/>
        <attr name="showSplit" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="DragImageView">
        <attr name="delayTime" format="float"/>
    </declare-styleable>

    <declare-styleable name="ListEmptyView">
        <attr name="titleImage" format="reference"/>
        <attr name="contentMessage" format="reference|string"/>
        <attr name="contentMessageSize" format="dimension|reference"/>
        <attr name="contentMessageColor" format="color|reference"/>
        <attr name="contentHint" format="reference|string"/>
        <attr name="contentHintColor" format="reference|color"/>
        <attr name="contentHintSize" format="reference|dimension"/>
        <attr name="goingText" format="string|reference"/>
        <attr name="goingTextColor" format="reference|color"/>
        <attr name="goingTextSize" format="dimension|reference"/>
        <attr name="goingBg" format="reference"/>
    </declare-styleable>

    <declare-styleable name="BgShadowTextView">
        <attr name="bgStartColor" format="reference|color"/>
        <attr name="bgEndColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="LoopView">
        <attr name="dateLineColor" format="color"/>
        <attr name="topBottomTextColor" format="color"/>
        <attr name="centerTextColor" format="color"/>
        <attr name="dateTextSize" format="dimension"/>
        <attr name="canLoop" format="boolean"/>
        <attr name="initPosition" format="integer"/>
        <attr name="drawItemCount" format="integer"/>
    </declare-styleable>
</resources>