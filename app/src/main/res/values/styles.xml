<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTheme.NoTitle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="LoginPageEnter" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/EnterFromBottom</item>
    </style>

    <style name="EnterFromBottom" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/no_change</item>
    </style>

    <style name="SignEditText" parent="@android:style/TextAppearance">
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/unluckyText</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="SignEditText.PhoneNum">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">13</item>
    </style>

    <style name="MarketDataTitle">
        <item name="android:textColor">@color/unluckyText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MarketData">
        <item name="android:textColor">@color/unluckyText</item>
        <item name="android:textSize">12sp</item>
        <item name="android:minWidth">50dp</item>
    </style>

    <style name="TradeFixedTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">14dp</item>
        <item name="tabPaddingEnd">14dp</item>
        <item name="tabTextAppearance">@style/TradeFixedTabText</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabSelectedTextColor">@color/redPrimary</item>
    </style>

    <style name="TradeFixedTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/luckyText</item>
    </style>

    <style name="BattleTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">14dp</item>
        <item name="tabPaddingEnd">14dp</item>
        <item name="tabTextAppearance">@style/BattleTabText</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabSelectedTextColor">@color/redPrimary</item>
    </style>

    <style name="BattleTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomDialogAnimation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="DatePickerDialog" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar.MinWidth">
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="UpLoadHeadImageDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
    </style>

    <style name="BindBankHintDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="futureListTitle">
        <item name="android:textColor">#838489</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MarketDataStock">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/list_title_size</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <style name="FiveMarketDataStockItem">
        <item name="android:textColor">#838489</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="FiveMarketDataStockAmount">
        <item name="android:textColor">#838489</item>
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="FiveMarketDataStockAskLastPrice">
        <item name="android:textColor">#33D37D</item>
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="FiveMarketDataStockBidLastPrice">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="battle_trade_desc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/unluckyText</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="battle_trade_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="reward_money">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/reward_money_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_reward_money</item>
    </style>
</resources>
