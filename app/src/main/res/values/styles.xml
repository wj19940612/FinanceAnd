<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTheme.NoTitle.FadeIn" parent="DialogTheme.NoTitle">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
    </style>

    <style name="DialogTheme.NoTitle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 底部出现的 Activity 主题 -->
    <style name="PageBottomEnter" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/EnterFromBottom</item>
    </style>

    <style name="PageFadeIn" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/FadeIn</item>
    </style>

    <style name="FadeIn" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in_quickly</item>
        <item name="android:activityOpenExitAnimation">@anim/hold</item>
    </style>

    <style name="EnterFromBottom" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/hold</item>
    </style>

    <style name="SignEditText" parent="@android:style/TextAppearance">
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/unluckyText</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="SignEditText.PhoneNum">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">13</item>
    </style>

    <style name="MarketDataTitle">
        <item name="android:textColor">@color/unluckyText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MarketData">
        <item name="android:textColor">@color/unluckyText</item>
        <item name="android:textSize">12sp</item>
        <item name="android:minWidth">50dp</item>
    </style>

    <style name="MarketData.Stock">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TradeFixedTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">14dp</item>
        <item name="tabPaddingEnd">14dp</item>
        <item name="tabTextAppearance">@style/TradeFixedTabText</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="TradeFixedTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/luckyText</item>
    </style>

    <!--对战页面行情选择器样式-->
    <style name="BattleTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">14dp</item>
        <item name="tabPaddingEnd">14dp</item>
        <item name="tabTextAppearance">@style/BattleTabText</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabBackground">@drawable/tab_layout_battle</item>
    </style>

    <style name="BattleTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/unluckyText</item>
    </style>
    <!--对战页面行情选择器样式-->

    <style name="BottomDialogAnimation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="DatePickerDialog" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar.MinWidth">
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BaseDialog.WindowCloseOnTouchOutside" parent="BaseDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="BaseDialog.Bottom">
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
    </style>

    <style name="futureListTitle">
        <item name="android:textColor">#838489</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MarketDataStock">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/list_title_size</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <style name="FiveMarketDataStockItem">
        <item name="android:textColor">#838489</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="FiveMarketDataStockAmount">
        <item name="android:textColor">#838489</item>
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="FiveMarketDataStockAskLastPrice">
        <item name="android:textColor">#33D37D</item>
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="FiveMarketDataStockBidLastPrice">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="reward_money">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/reward_money_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_reward_money</item>
    </style>

    <style name="Widget.GifView" parent="@android:style/Widget"/>


    <style name="UserArenaSignEditText" parent="@android:style/TextAppearance">
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/split</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="future_btn">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">@dimen/common_padding</item>
        <item name="android:paddingRight">@dimen/common_padding</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:textColor">@color/future_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_future_primary_large_rounded</item>
    </style>

    <style name="profit_btn">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingRight">26dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:textColor">@color/future_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_future_primary_large_rounded</item>
    </style>

    <style name="battle_user_nick_name">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">8</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
